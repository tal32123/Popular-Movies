<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.talcharnes.popularmovies">

    <uses-permission android:name="android.permission.INTERNET">
        Uses internet to fetch weather data
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE">
        Makes sure Internet is working so that app doesn't crash
    </uses-permission>/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetails"
            android:label="@string/title_activity_movie_details"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tk.talcharnes.popularmovies.MainActivity" />
        </activity>
        <provider
            android:authorities="tk.talcharnes.popularmovies.db"
            android:name=".db.MovieProvider"/>
    </application>

</manifest>
